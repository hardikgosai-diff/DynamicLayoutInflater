<RelativeLayout
    layout_width="match_parent"
    layout_height="wrap_content"
    padding="8dp">

    <LinearLayout
        id="@id/ll"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_centerHorizontal="true"
        orientation="horizontal">

        <ImageView
            id="@+id/ivMain"
            layout_width="500px"
            layout_height="147px"
            tag="main.png" />

        <LinearLayout
            id="@+id/ll1"
            layout_width="match_parent"
            layout_height="match_parent"
            padding="8dp"
            layout_marginStart="8dp"
            background="#80000000"
            orientation="vertical">

            <TextView
                id="@+id/tvTime"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                gravity="start|center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

            <TextView
                id="@+id/tvDate"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                gravity="start|center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        id="@+id/tvAddress"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        padding="4dp"
        background="#80000000"
        layout_below="@+id/ll"
        gravity="center"
        textColor="#FFFFFFFF"
        singleLine="true"
        ellipsize="end" />

</RelativeLayout>