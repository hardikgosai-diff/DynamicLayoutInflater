<RelativeLayout
    layout_width="match_parent"
    layout_height="wrap_content"
    padding="8dp">

    <ImageView
        id="@+id/ivBg"
        layout_width="match_parent"
        layout_height="350px"
        scaleType="fitXY"
        tag="bg.png" />

    <TextView
        id="@+id/tvAddress"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_alignBottom="@id/ivBg"
        padding="4dp"
        gravity="center"
        textColor="#FFFFFFFF"
        singleLine="true"
        ellipsize="end"
        tag="creteround.ttf" />

    <FrameLayout
        id="@+id/divider2"
        layout_width="match_parent"
        layout_height="1px"
        layout_above="@+id/tvAddress"
        background="#FFFFFFFF" />

    <LinearLayout
        id="@+id/ll"
        layout_width="match_parent"
        layout_height="0dp"
        layout_alignTop="@+id/ivBg"
        layout_alignBottom="@+id/divider2"
        padding="8dp"
        gravity="center"
        orientation="horizontal">

        <FrameLayout
            id="@+id/flMap"
            layout_width="230px"
            layout_height="230px" />

        <LinearLayout
            id="@+id/ll1"
            layout_width="0dp"
            layout_height="match_parent"
            layout_weight="1"
            layout_marginStart="8dp"
            layout_marginEnd="8dp"
            orientation="vertical">

            <LinearLayout
                id="@+id/ll2"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                orientation="horizontal">

                <LinearLayout
                    id="@+id/llLat"
                    layout_width="0dp"
                    layout_height="wrap_content"
                    layout_weight="1"
                    gravity="center"
                    orientation="vertical">

                    <TextView
                        id="@+id/tvLatitudeLabel"
                        layout_width="wrap_content"
                        layout_height="wrap_content"
                        text="Latitude"
                        textColor="#FFFFFFFF"
                        gravity="center"
                        singleLine="true"
                        ellipsize="end"
                        tag="creteround.ttf" />

                    <TextView
                        id="@+id/tvLatitude"
                        layout_width="wrap_content"
                        layout_height="wrap_content"
                        textColor="#FFFFFFFF"
                        gravity="center"
                        singleLine="true"
                        ellipsize="end"
                        tag="creteround.ttf" />

                </LinearLayout>

                <LinearLayout
                    id="@+id/llLng"
                    layout_width="0dp"
                    layout_height="wrap_content"
                    layout_weight="1"
                    gravity="center"
                    orientation="vertical">

                    <TextView
                        id="@+id/tvLongitudeLabel"
                        layout_width="wrap_content"
                        layout_height="wrap_content"
                        text="Longitude"
                        textColor="#FFFFFFFF"
                        gravity="center"
                        singleLine="true"
                        ellipsize="end"
                        tag="creteround.ttf" />

                    <TextView
                        id="@+id/tvLongitude"
                        layout_width="wrap_content"
                        layout_height="wrap_content"
                        textColor="#FFFFFFFF"
                        gravity="center"
                        singleLine="true"
                        ellipsize="end"
                        tag="creteround.ttf" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                id="@+id/divider"
                layout_width="match_parent"
                layout_height="1px"
                layout_marginTop="2dp"
                layout_marginBottom="2dp"
                background="#FFFFFFFF" />

            <TextView
                id="@+id/tvDate"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                gravity="center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end"
                tag="creteround.ttf" />

        </LinearLayout>

        <LinearLayout
            id="@+id/ll3"
            layout_width="0dp"
            layout_height="match_parent"
            layout_weight="0.5"
            padding="8dp"
            orientation="vertical"
            gravity="center">

            <ImageView
                id="@+id/ivSmall"
                layout_width="80px"
                layout_height="80px"
                tag="small.png" />

            <TextView
                id="@+id/tvDegree"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="4dp"
                gravity="center_vertical"
                textSize="22sp"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end"
                tag="creteround.ttf" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>