<RelativeLayout 
    layout_width="match_parent"
    layout_height="wrap_content">

    <ImageView
        id="@+id/ivMain"
        layout_width="1030px"
        layout_height="400px"
        layout_alignParentEnd="true"
        tag="main.png" />

    <FrameLayout
        id="@+id/spacer"
        layout_width="match_parent"
        layout_height="35px"
        layout_alignBottom="@+id/ivMain" />

    <LinearLayout
        id="@+id/ll"
        layout_width="765px"
        layout_height="175px"
        paddingTop="4dp"
        paddingBottom="4dp"
        paddingStart="16dp"
        paddingEnd="16dp"
        orientation="vertical"
        layout_alignStart="@id/ivMain"
        layout_above="@+id/spacer">

        <TextView
            id="@+id/tvTime"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            gravity="center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end" />

        <TextView
            id="@+id/tvDate"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            gravity="center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end" />

        <TextView
            id="@+id/tvAddress"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            gravity="center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end" />

    </LinearLayout>

</RelativeLayout>