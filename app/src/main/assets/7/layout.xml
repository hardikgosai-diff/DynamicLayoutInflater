<RelativeLayout
    id="@+id/main"
    layout_width="match_parent"
    layout_height="wrap_content">

    <ImageView
        id="@+id/ivMain"
        layout_width="1030px"
        layout_height="308px"
        tag="main" />

    <FrameLayout
        id="@+id/spacer"
        layout_width="300px"
        layout_height="308px" />

    <LinearLayout
        id="@+id/llContent"
        layout_width="0dp"
        layout_height="200px"
        layout_marginEnd="30dp"
        layout_alignParentEnd="true"
        layout_centerVertical="true"
        layout_toEndOf="@id/spacer"
        gravity="center"
        orientation="horizontal">

        <LinearLayout
            id="@+id/llLatLng"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"
            orientation="vertical">

            <LinearLayout
                id="@+id/llLat"
                layout_width="match_parent"
                layout_height="wrap_content"
                orientation="horizontal">

                <TextView
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    text="Lat: "
                    textSize="12sp"
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end" />

                <TextView
                    id="@+id/tvLatitude"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    textSize="12sp"
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end" />

            </LinearLayout>

            <LinearLayout
                id="@+id/llLng"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_marginTop="2dp"
                orientation="horizontal">

                <TextView
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    text="Lng: "
                    textSize="12sp"
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end" />

                <TextView
                    id="@+id/tvLongitude"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    textSize="12sp"
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            layout_width="1px"
            layout_height="match_parent"
            layout_margin="8dp"
            background="#FFFFFFFF" />

        <LinearLayout
            id="@+id/llTimeAddress"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"
            orientation="vertical">

            <TextView
                id="@+id/tvTime"
                layout_width="match_parent"
                layout_height="wrap_content"
                gravity="center"
                textSize="12sp"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

            <LinearLayout
                id="@+id/llAddress"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_marginTop="2dp"
                orientation="horizontal"
                gravity="center">

                <ImageView
                    id="@+id/ivMarker"
                    layout_width="40px"
                    layout_height="40px"
                    tag="marker.png" />

                <TextView
                    id="@+id/tvAddress"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    layout_marginStart="8dp"
                    gravity="center"
                    textSize="12sp"
                    textColor="#FFFFFFFF"
                    singleLine="true"
                    ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>