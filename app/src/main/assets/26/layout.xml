<RelativeLayout 
    layout_width="match_parent"
    layout_height="wrap_content"
    padding="8dp">

    <ImageView
        id="@+id/ivMain"
        layout_width="200px"
        layout_height="200px"
        tag="main.png" />

    <LinearLayout
        id="@+id/ll"
        layout_width="match_parent"
        layout_height="200px"
        background="#66000000"
        padding="8dp"
        layout_marginStart="8dp"
        orientation="horizontal"
        layout_toEndOf="@id/ivMain">

        <LinearLayout
            id="@+id/ll1"
            layout_width="0dp"
            layout_height="match_parent"
            layout_weight="1"
            orientation="vertical">

            <TextView
                id="@+id/tvTime"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                gravity="start|center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end"
                tag="coustard.ttf"/>

            <TextView
                id="@+id/tvDate"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                gravity="start|center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end"
                tag="coustard.ttf"/>

            <TextView
                id="@+id/tvAddress"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                gravity="start|center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end"
                tag="coustard.ttf"/>

        </LinearLayout>

        <LinearLayout
            id="@+id/ll2"
            layout_width="0dp"
            layout_height="match_parent"
            layout_weight="1"
            layout_gravity="center_vertical"
            gravity="center"
            orientation="horizontal">

            <ImageView
                id="@+id/ivSmall"
                layout_width="80px"
                layout_height="80px"
                tag="small.png" />

            <TextView
                id="@+id/tvDegree"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginStart="8dp"
                gravity="center"
                textSize="18sp"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end"
                tag="coustard.ttf"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>