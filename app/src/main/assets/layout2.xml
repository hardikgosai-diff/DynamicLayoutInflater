<RelativeLayout
    layout_width="match_parent"
    layout_height="wrap_content">

    <ImageView
        id="@+id/ivMain"
        layout_width="450px"
        layout_height="430px"
        tag="main.png"/>

    <LinearLayout
        layout_width="0dp"
        layout_height="430px"
        layout_marginEnd="8dp"
        orientation="vertical"
        layout_toEndOf="@id/ivMain"
        layout_alignParentEnd="true">

        <ImageView
            id="@+id/ivText"
            layout_width="575px"
            layout_height="70px"
            layout_weight="1"
            tag="text.png"/>

        <FrameLayout
            id="@+id/divider"
            layout_width="match_parent"
            layout_height="1px"
            background="#FFFFFF" />

        <TextView
            id="@+id/tvAddress"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            gravity="start|center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"/>

        <TextView
            id="@+id/tvDate"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            gravity="end|center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end" />

    </LinearLayout>

</RelativeLayout>