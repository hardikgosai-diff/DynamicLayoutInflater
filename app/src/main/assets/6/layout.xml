<RelativeLayout
    layout_width="match_parent"
    layout_height="wrap_content"
    padding="8dp">

    <LinearLayout
        id="@+id/ll"
        layout_width="match_parent"
        layout_height="wrap_content"
        orientation="horizontal">

        <LinearLayout
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"
            orientation="vertical">

            <TextView
                id="@+id/tvTime"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

            <TextView
                id="@+id/tvDate"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

        </LinearLayout>

        <ImageView
            id="@+id/ivMain"
            layout_width="100px"
            layout_height="100px"
            layout_marginStart="8dp"
            layout_marginEnd="8dp"
            tag="main.png" />

        <LinearLayout
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"
            orientation="vertical">

            <TextView
                id="@+id/tvLatitude"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                gravity="end"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

            <TextView
                id="@+id/tvLongitude"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                gravity="end"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        padding="4dp"
        layout_centerHorizontal="true"
        orientation="horizontal"
        gravity="center"
        background="#80000000"
        layout_below="@+id/ll">

        <ImageView
            id="@+id/ivMarker"
            layout_width="40px"
            layout_height="40px"
            tag="marker.png" />

        <TextView
            id="@+id/tvAddress"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginStart="8dp"
            gravity="center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end" />

    </LinearLayout>

</RelativeLayout>