<RelativeLayout
    layout_width="wrap_content"
    layout_height="wrap_content"
    padding="8dp">

    <TextView
        id="@+id/tvAddress"
        layout_width="match_parent"
        layout_height="wrap_content"
        padding="4dp"
        background="#80000000"
        layout_weight="1"
        gravity="end"
        textColor="#FFFFFFFF"
        singleLine="true"
        ellipsize="end" />

    <ImageView
        id="@+id/ivMain"
        layout_width="230px"
        layout_height="230px"
        layout_below="@+id/tvAddress"
        tag="main.png" />

    <ImageView
        id="@+id/ivBg"
        layout_width="0dp"
        layout_height="230px"
        layout_below="@+id/tvAddress"
        layout_centerInParent="true"
        layout_toEndOf="@id/ivMain"
        layout_alignParentEnd="true"
        tag="bg.png"/>

    <LinearLayout
        id="@+id/ll"
        layout_width="0dp"
        layout_height="230px"
        layout_below="@+id/tvAddress"
        padding="8dp"
        layout_centerInParent="true"
        layout_toEndOf="@id/ivMain"
        layout_alignParentEnd="true"
        orientation="horizontal">

        <LinearLayout
            id="@+id/ll1"
            layout_width="0dp"
            layout_height="match_parent"
            layout_weight="0.5"
            orientation="vertical"
            gravity="center">

            <TextView
                id="@+id/tvTime"
                layout_width="wrap_content"
                layout_height="wrap_content"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

            <LinearLayout
                id="@+id/ll2"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="4dp"
                gravity="center_vertical"
                orientation="horizontal">

                <ImageView
                    id="@+id/ivSmall"
                    layout_width="60px"
                    layout_height="60px"
                    tag="small.png" />

                <TextView
                    id="@+id/tvDegree"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    gravity="center_vertical"
                    textSize="16sp"
                    textColor="#FFFFFFFF"
                    singleLine="true"
                    ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            id="@+id/ll3"
            layout_width="0dp"
            layout_height="match_parent"
            layout_marginStart="8dp"
            layout_weight="1"
            orientation="vertical">

            <TextView
                id="@+id/tvDate"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                gravity="end|center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

            <LinearLayout
                id="@+id/ll4"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                layout_marginTop="2dp"
                gravity="end|center"
                orientation="horizontal">

                <TextView
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    text="Lat: "
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end" />

                <TextView
                    id="@+id/tvLatitude"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end" />

            </LinearLayout>

            <LinearLayout
                id="@+id/ll5"
                layout_width="match_parent"
                layout_height="0dp"
                layout_weight="1"
                layout_marginTop="2dp"
                gravity="end|center"
                orientation="horizontal">

                <TextView
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    text="Lng: "
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end" />

                <TextView
                    id="@+id/tvLongitude"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>