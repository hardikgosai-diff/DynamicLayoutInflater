<RelativeLayout
    layout_width="match_parent"
    layout_height="wrap_content"
    padding="8dp">

    <ImageView
        id="@+id/ivMain"
        layout_width="200px"
        layout_height="200px"
        tag="main.png" />

    <FrameLayout
        id="@+id/divider"
        layout_width="1px"
        layout_height="200px"
        background="#FFFFFFFF"
        layout_marginStart="8dp"
        layout_marginEnd="8dp"
        layout_toEndOf="@id/ivMain"/>

    <LinearLayout
        id="@+id/ll"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_centerVertical="true"
        orientation="vertical"
        layout_toEndOf="@id/divider">

        <TextView
            id="@+id/tvTime"
            layout_width="match_parent"
            layout_height="wrap_content"
            gravity="start|center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="courgette.ttf" />

        <TextView
            id="@+id/tvDate"
            layout_width="match_parent"
            layout_height="wrap_content"
            gravity="start|center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="courgette.ttf" />

        <TextView
            id="@+id/tvAddress"
            layout_width="match_parent"
            layout_height="wrap_content"
            gravity="start|center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="courgette.ttf" />

    </LinearLayout>

</RelativeLayout>