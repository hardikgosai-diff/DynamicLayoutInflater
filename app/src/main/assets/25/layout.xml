<RelativeLayout 
    layout_width="match_parent"
    layout_height="wrap_content"
    padding="8dp">

    <LinearLayout
        id="@+id/ll"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginBottom="16dp"
        gravity="center"
        orientation="horizontal">

        <FrameLayout
            layout_width="0dp"
            layout_height="1px"
            layout_weight="1"
            background="#FFFFFFFF"/>

        <ImageView
            id="@+id/ivMain"
            layout_width="300px"
            layout_height="256px"
            layout_marginStart="8dp"
            layout_marginEnd="8dp"
            tag="main.png" />

        <FrameLayout
            layout_width="0dp"
            layout_height="1px"
            layout_weight="1"
            background="#FFFFFFFF"/>

    </LinearLayout>

    <FrameLayout
        id="@+id/divider"
        layout_width="match_parent"
        layout_height="1px"
        background="#FFFFFFFF"
        layout_below="@+id/ll"/>

    <TextView
        id="@+id/tvAddress"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        layout_below="@+id/divider"
        gravity="center"
        textColor="#FFFFFFFF"
        singleLine="true"
        ellipsize="end" />

    <LinearLayout
        id="@+id/ll1"
        layout_width="match_parent"
        layout_height="wrap_content"
        orientation="horizontal"
        layout_marginBottom="8dp"
        layout_above="@+id/divider">

        <LinearLayout
            id="@+id/ll2"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"
            gravity="center_vertical"
            orientation="horizontal">

            <ImageView
                id="@+id/ivSmall"
                layout_width="80px"
                layout_height="80px"
                tag="small.png" />

            <TextView
                id="@+id/tvDegree"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginStart="8dp"
                gravity="center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

        </LinearLayout>

        <FrameLayout
            id="@+id/spacer"
            layout_width="300px"
            layout_height="wrap_content"
            layout_marginStart="8dp"
            layout_marginEnd="8dp"/>

        <LinearLayout
            id="@+id/ll3"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"
            orientation="vertical">

            <TextView
                id="@+id/tvTime"
                layout_width="match_parent"
                layout_height="wrap_content"
                gravity="end|center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

            <TextView
                id="@+id/tvDate"
                layout_width="match_parent"
                layout_height="wrap_content"
                gravity="end|center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>