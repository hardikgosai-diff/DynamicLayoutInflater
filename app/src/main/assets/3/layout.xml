<RelativeLayout
    layout_width="match_parent"
    layout_height="wrap_content"
    padding="8dp">

    <ImageView
        id="@+id/ivMain"
        layout_width="327px"
        layout_height="110px"
        layout_centerHorizontal="true"
        tag="main.png"/>

    <ImageView
        id="@+id/ivSmall"
        layout_width="100px"
        layout_height="100px"
        tag="small.png"/>

    <TextView
        id="@+id/tvDegree"
        layout_width="0dp"
        layout_height="wrap_content"
        layout_marginStart="8dp"
        layout_marginEnd="8dp"
        layout_toStartOf="@+id/ivMain"
        layout_toEndOf="@+id/ivSmall"
        layout_alignTop="@id/ivSmall"
        layout_alignBottom="@id/ivSmall"
        gravity="start|center"
        textStyle="bold"
        textSize="18sp"
        textColor="#FFFFFFFF"
        singleLine="true"
        ellipsize="end" />

    <LinearLayout
        layout_width="0dp"
        layout_height="wrap_content"
        orientation="vertical"
        layout_toEndOf="@id/ivMain"
        layout_alignParentEnd="true">

        <TextView
            id="@+id/tvDate"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            gravity="end|center"
            textColor="#FFFFFFFF"
            textStyle="bold"
            singleLine="true"
            ellipsize="end" />

        <TextView
            id="@+id/tvTime"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            gravity="end|center"
            textColor="#FFFFFFFF"
            textStyle="bold"
            singleLine="true"
            ellipsize="end" />

    </LinearLayout>

    <FrameLayout
        id="@+id/divider"
        layout_width="match_parent"
        layout_height="1px"
        layout_marginTop="16dp"
        background="#FFFFFF"
        layout_below="@+id/ivMain" />

    <LinearLayout
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="16dp"
        layout_centerHorizontal="true"
        orientation="horizontal"
        gravity="center"
        layout_below="@id/divider">

        <ImageView
            id="@+id/ivMarker"
            layout_width="40px"
            layout_height="40px"
            tag="marker.png"/>

        <TextView
            id="@+id/tvAddress"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginStart="8dp"
            gravity="center"
            textColor="#FFFFFFFF"
            textStyle="bold" />

    </LinearLayout>

</RelativeLayout>