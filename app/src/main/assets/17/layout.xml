<RelativeLayout 
    layout_width="wrap_content"
    layout_height="wrap_content"
    padding="8dp">

    <ImageView
        id="@+id/ivMain"
        layout_width="500px"
        layout_height="102px"
        tag="main.png" />

    <ImageView
        id="@+id/ivBg"
        layout_width="500px"
        layout_height="80px"
        layout_marginTop="8dp"
        layout_below="@id/ivMain"
        tag="bg.png" />

    <TextView
        id="@+id/tvDate"
        layout_width="0dp"
        layout_height="0dp"
        paddingStart="8dp"
        paddingEnd="8dp"
        layout_alignTop="@id/ivBg"
        layout_alignBottom="@id/ivBg"
        layout_alignStart="@id/ivBg"
        layout_alignEnd="@id/ivBg"
        gravity="center"
        textColor="#FF000000"
        singleLine="true"
        ellipsize="end" />

    <LinearLayout
        id="@+id/ll"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        layout_below="@id/tvDate"
        layout_centerHorizontal="true"
        orientation="horizontal">

        <TextView
            id="@+id/tvTime"
            layout_width="wrap_content"
            layout_height="wrap_content"
            gravity="end|center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end" />

        <FrameLayout
            id="@+id/divider"
            layout_width="1px"
            layout_height="match_parent"
            layout_marginStart="8dp"
            layout_marginEnd="8dp"
            background="#FFFFFFFF" />

        <TextView
            id="@+id/tvAddress"
            layout_width="wrap_content"
            layout_height="wrap_content"
            gravity="start|center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end" />

    </LinearLayout>

</RelativeLayout>