<RelativeLayout
    layout_width="match_parent"
    layout_height="wrap_content">

    <ImageView
        id="@+id/ivMain"
        layout_width="400px"
        layout_height="400px"
        tag="main.png" />

    <LinearLayout
        id="@+id/ll"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginEnd="8dp"
        layout_toEndOf="@id/ivMain"
        layout_centerVertical="true"
        orientation="vertical">

        <LinearLayout
            id="@+id/ll1"
            layout_width="match_parent"
            layout_height="wrap_content"
            orientation="horizontal">

            <TextView
                id="@+id/tvDate"
                layout_width="0dp"
                layout_height="match_parent"
                layout_weight="1"
                gravity="start|center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end"
                tag="creteround.ttf" />

            <TextView
                id="@+id/tvTime"
                layout_width="wrap_content"
                layout_height="match_parent"
                layout_marginStart="8dp"
                gravity="center"
                textColor="#FFFFFFFF"
                singleLine="true"
                ellipsize="end"
                tag="creteround.ttf" />

        </LinearLayout>

        <LinearLayout
            id="@+id/ll2"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginTop="8dp"
            orientation="horizontal">

            <LinearLayout
                id="@+id/llLat"
                layout_width="0dp"
                layout_height="match_parent"
                layout_weight="1"
                gravity="center"
                orientation="horizontal">

                <TextView
                    id="@+id/tvLatitudeLabel"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    text="Lat: "
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end"
                    tag="creteround.ttf" />

                <TextView
                    id="@+id/tvLatitude"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end"
                    tag="creteround.ttf" />

            </LinearLayout>

            <LinearLayout
                id="@+id/llLng"
                layout_width="0dp"
                layout_height="match_parent"
                layout_marginStart="8dp"
                layout_weight="1"
                gravity="center"
                orientation="horizontal">

                <TextView
                    id="@+id/tvLongitudeLabel"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    text="Lng: "
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end"
                    tag="creteround.ttf" />

                <TextView
                    id="@+id/tvLongitude"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    textColor="#FFFFFFFF"
                    gravity="center"
                    singleLine="true"
                    ellipsize="end"
                    tag="creteround.ttf" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            id="@+id/divider"
            layout_width="match_parent"
            layout_height="1px"
            layout_marginTop="8dp"
            layout_marginBottom="8dp"
            background="#FFFFFFFF" />

        <TextView
            id="@+id/tvAddress"
            layout_width="match_parent"
            layout_height="wrap_content"
            gravity="center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="creteround.ttf" />

    </LinearLayout>

</RelativeLayout>