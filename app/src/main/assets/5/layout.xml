<RelativeLayout
    layout_width="match_parent"
    layout_height="wrap_content"
    padding="8dp">

    <FrameLayout
        id="@+id/fl"
        layout_width="match_parent"
        layout_height="wrap_content">

        <FrameLayout
            layout_width="match_parent"
            layout_height="1px"
            layout_gravity="center"
            background="#FFFFFF" />

        <ImageView
            id="@+id/ivMain"
            layout_width="420px"
            layout_height="130px"
            layout_gravity="center"
            tag="main.png" />

    </FrameLayout>

    <TextView
        id="@+id/tvDate"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        layout_centerHorizontal="true"
        gravity="end|center"
        textColor="#FFFFFFFF"
        singleLine="true"
        ellipsize="end"
        layout_below="@+id/fl" />

    <ImageView
        id="@+id/ivSmall"
        layout_width="100px"
        layout_height="100px"
        tag="small.png"
        layout_alignBottom="@id/tvDate" />

    <TextView
        id="@+id/tvDegree"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginStart="8dp"
        gravity="center"
        textColor="#FFFFFFFF"
        singleLine="true"
        ellipsize="end"
        layout_toEndOf="@id/ivSmall"
        layout_alignTop="@+id/ivSmall"
        layout_alignBottom="@id/ivSmall" />

    <TextView
        id="@+id/tvTime"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginStart="8dp"
        gravity="center"
        textSize="18sp"
        textStyle="bold"
        textColor="#FFFFFFFF"
        singleLine="true"
        ellipsize="end"
        layout_alignParentEnd="true"
        layout_alignBottom="@id/tvDate" />

    <FrameLayout
        id="@+id/divider"
        layout_width="match_parent"
        layout_height="1px"
        layout_marginTop="8dp"
        layout_below="@id/tvDate"
        tag="divider.png" />

    <LinearLayout
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        layout_centerHorizontal="true"
        orientation="horizontal"
        gravity="start|center"
        layout_below="@id/divider">

        <ImageView
            id="@+id/ivMarker"
            layout_width="40px"
            layout_height="40px"
            tag="marker.png" />

        <TextView
            id="@+id/tvAddress"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginStart="8dp"
            gravity="center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end" />

    </LinearLayout>

</RelativeLayout>