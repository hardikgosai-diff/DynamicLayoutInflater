<RelativeLayout
    layout_width="wrap_content"
    layout_height="wrap_content"
    padding="8dp">

    <ImageView
        id="@+id/ivMain"
        layout_width="450px"
        layout_height="397px"
        tag="main.png" />

    <LinearLayout
        id="@+id/ll"
        layout_width="0dp"
        layout_height="200px"
        orientation="vertical"
        layout_alignStart="@id/ivMain"
        layout_alignEnd="@id/ivMain"
        layout_alignBottom="@+id/ivMain">

        <TextView
            id="@+id/tvTime"
            layout_width="match_parent"
            layout_height="0dp"
            paddingStart="8dp"
            paddingEnd="8dp"
            layout_weight="1"
            gravity="center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="cantoraone.ttf"/>

        <TextView
            id="@+id/tvDate"
            layout_width="match_parent"
            layout_height="0dp"
            paddingStart="8dp"
            paddingEnd="8dp"
            layout_weight="1"
            gravity="center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="cantoraone.ttf"/>

        <TextView
            id="@+id/tvAddress"
            layout_width="match_parent"
            layout_height="0dp"
            paddingStart="8dp"
            paddingEnd="8dp"
            layout_weight="1"
            gravity="center"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="cantoraone.ttf"/>

    </LinearLayout>

</RelativeLayout>