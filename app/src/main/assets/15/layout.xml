<RelativeLayout 
    layout_width="match_parent"
    layout_height="wrap_content"
    padding="8dp">

    <ImageView
        id="@+id/ivMain"
        layout_width="400px"
        layout_height="266px"
        layout_alignParentEnd="true"
        tag="main.png" />

    <LinearLayout
        id="@+id/ll"
        layout_width="match_parent"
        layout_height="0dp"
        layout_marginEnd="8dp"
        layout_toStartOf="@id/ivMain"
        layout_centerVertical="true"
        layout_alignTop="@+id/ivMain"
        layout_alignBottom="@id/ivMain"
        orientation="vertical">

        <TextView
            id="@+id/tvTime"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="courgette.ttf" />

        <TextView
            id="@+id/tvDate"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="courgette.ttf" />

        <TextView
            id="@+id/tvAddress"
            layout_width="match_parent"
            layout_height="0dp"
            layout_weight="1"
            textColor="#FFFFFFFF"
            singleLine="true"
            ellipsize="end"
            tag="courgette.ttf" />

    </LinearLayout>

</RelativeLayout>